#!/bin/bash

BLINDTASTIC=./blindtastic
SVM_CLASS=./svm_perf_classify

if [[ ! OS ]]
then
echo "Oh boy, detected Windows, let's hope this works..."
BLINDTASTIC=blindtastic.exe
SVM_CLASS=svm_perf_classify.exe
fi

if (( $# < 1 ))
then
echo "usage: $0 <name>"
exit 1
elif [[ -f $1.model ]]
then
echo "model loaded"
echo "looking for test.data ..."
if [[ ! -f "test.data" ]]
then
echo "generating testdata..."
$BLINDTASTIC -o > test.data
fi

$SVM_CLASS test.data $1.model $1.predn
$BLINDTASTIC -c $1.predn

fi
