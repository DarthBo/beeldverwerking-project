#!/bin/bash

#comment this line to use full frame
USEGRID=-g

BLINDTASTIC="./blindtastic $USEGRID"
SVM_CLASS=./svm_perf_classify

if (( $# < 1 ))
then
echo "usage: $0 <name>"
exit 1
elif [[ -f $1.model ]]
then
echo "model loaded"
echo "looking for test.data ..."
if [[ ! -f "test.data" ]]
then
echo "generating testdata..."
$BLINDTASTIC -o > test.data
fi

$SVM_CLASS test.data $1.model $1.predn
$BLINDTASTIC -c $1.predn

fi
